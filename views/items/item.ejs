<%- include('../includes/head.ejs') %>
</head>
<body>
    <%- include('../includes/navigation.ejs') %>
    <section class="section">
            <div class="card">
                    <div class="card-content">
                      <div class="media">
                        <div class="media-left">
                          <figure class="image is-48x48">
                            <img src="<%= data.sprites.default %>" alt="<%= data.name %>">
                          </figure>
                        </div>
                        <div class="media-content">
                          <p class="title is-size-5"><%= data.name %></p>
                          <p class="title is-size-6">Category:<%= data.category.name %></p>
                          <p class="title is-size-6">Attributes:
                                <% for (let attribute of data.attributes) { %>
                                    <a class="subtitle is-size-6"><%= attribute.name %></a> 
                                <% }  %> 
                          </p>
                          <p>Effect: <%= data.effect_entries[0].effect %></p>
                          <p>Short Effect: <%= data.effect_entries[0].short_effect %></p>
                        </div>
                        
                      </div>
                    </div>
    </section>
    

        
   

<%- include('../includes/end.ejs') %>





      