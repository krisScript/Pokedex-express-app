<%- include('../includes/head.ejs') %>
    </head>
  
  <body>
      <%- include('../includes/navigation.ejs') %>
    <section class="section">
        <% if (items.length > 0) { %>
          <div class="columns is-multiline">
              <% for (let item of items) { %>
              <div class="column is-one-quarter">
                  
                  <div class="card">
                      <div class="card-content">
                        <div class="media">
                          <div class="media-left">
                            <figure class="image is-48x48">
                              <img src="<%= item.sprite %>" alt="<%= item.name %>">
                            </figure>
                          </div>
                          <div class="media-content">
                            <p class="title is-size-5"><%= item.name %></p>
                            <p><a href="/item/<%= item.name %>" class="is-link is-primary">Learn More</a></p>
                          </div>
                        </div>
                      </div>
                    </div>
              </div>
                  <% } %>
                  </div>
                    <div class="field is-grouped ">
                        <% if (previous) { %>
                          <div class="control ">
                              <form method="POST" action="/items" id="previous-form">
                                <input type="text" hidden value="<%= previous %></" name="previousPage">
                                <button type="button"class="button is-danger" id="previous-btn">Previous</button>
                              </form>
                          </div>
                          
                          <% }  %>
                        <% if (next) { %>
                          <div class="control">
                              <form method="POST" action="/items" id="next-form">
                                <input type="text" hidden value="<%= next %></" name="nextPage">
                                <button class="button is-danger" type="button" id="next-btn">Next</button>
                              </form>
                          </div>                         
                          <% }  %>
                          </div>                
          <% } else { %>
              <h1>No Berries Found!</h1>
              <% } %>
    </section>

    <%- include('../includes/end.ejs') %>