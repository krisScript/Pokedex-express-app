<%- include('includes/head.ejs') %>
</head>
<body>
    <%- include('includes/navigation.ejs') %>
    <section class="section">
        <% if (errorMsg) { %>
             <div class="notification is-danger">
                 <p><%= errorMsg %></p>
               </div>

             <% }  %> 
           <form action="/search" method="POST">
                <div class="field">
                        <label class="label">Name</label>
                        <div class="control">
                          <input class="input  <%= errorsArr.find(e => e.param === 'name') ? 'is-danger' : '' %>" type="text" placeholder="Text input" name="name" required>
                        </div>
                      </div>
                      <div class="field">
                        <label class="label">Category</label>
                        <div class="control">
                          <div class="select <%= errorsArr.find(e => e.param === 'category') ? 'is-danger' : '' %>">
                            <select name="category" required>
                              <option>Pokemon</option>
                              <option >Berry</option>
                              <option >Item</option>
                              <option>Move</option>
                              <option>Pal Park Area</option>
                              <option>Pokedex</option>
                              <option>Region</option>
                              <option>Version</option>
                              <option>Version Group</option>
                            </select>
                          </div>
                        </div>
                      </div>
                      <div class="field is-grouped">
                        <div class="control">
                          <button class="button is-link">Submit</button>
                        </div>
                      </div>
           </form>  
    </section>
    

        
   

<%- include('includes/end.ejs') %>





      