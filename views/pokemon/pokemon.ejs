<%- include('../includes/head.ejs') %>
</head>
<body>
    <%- include('../includes/navigation.ejs') %>
    <section class="section">
      <div class="columns is-multiline">
        <div class="column is-one-third">
          <div class="card">
            <div class="card-content">
              <div class="media">
                <div class="media-left">
                  <figure class="image is-48x48">
                    <img src="<%= pokemon.defaultSprite %>" alt="<%= pokemon.name %>" >
                  </figure>
                  
                </div>
                <div class="media-content">
                  <p class="title is-size-5"><%= pokemon.name %> </p>
                  <p class="subtitle is-size-6">#<%= pokemon.id %></p>
                  <p class="subtitle is-size-6">Height: <%= pokemon.height %></p>
                  <p class="subtitle is-size-6">Weight: <%= pokemon.weight %></p>
                  <% for (let type of pokemon.types) { %>
                    <p class="subtitle is-size-6">Type: <%= type.type.name %></p>    
                    <% }  %> 
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="column is-two-thirds">         
         <% for (let stat of pokemon.stats) { %>
          <div>
              <label class="label"><%= stat.statName %></label>
                <progress class="progress is-primary" value="<%= stat.statValue %>" max="100"><%= stat.statValue %></progress>
            </div>        
          <% }  %>  
        </div>
          </div>
         </div>
      </div>      
    </section>
    <section class="section">
      <div class="container has-text-centered">
        <h2 class="title is-size-3">Sprites</h2>
      </div>
      <div class="column">
        <div class="columns is-multiline">
           <% for (let sprite of pokemon.sprites) { %>
            <% if (sprite) { %>
              <div class="column is-one-quarter">
                <div class="card">
  
                  <div class="card-content">
                    <div class="media">
                      <div class="media-left">
                        <figure class="image is-48x48">
                          <img src="<%= sprite.sprite %>" alt="Placeholder image">
                        </figure>
                      </div>
                      <div class="media-content">
                        <p class="title is-size-5"><%= sprite.spriteName %></p>
                      </div>
                    </div>
                  </div>
                </div>
               </div>
              <% }  %>
               
                   <% } %>
                 </div>
      </div>
    </section>
    <section class="section">
        <div class="container has-text-centered">
          <h2 class="title is-size-3">Moves</h2>
          <div class="section"></div>
          <div class="columns is-multiline">
           <% for (let move of pokemon.moves) { %>
               <div class="column is-2">
                  <a href="/move/<%= move.move.name %>" class="button"><%= move.move.name %></a>
               </div>
                   <% } %>
                 </div>
    </section>
        
   

<%- include('../includes/end.ejs') %>





      