<%- include('../includes/head.ejs') %>
    </head>
  
  <body>
      <%- include('../includes/navigation.ejs') %>
    <section class="section">
        <% if (pokedex.length > 0) { %>
          <div class="columns is-multiline">
              <% for (let pokemon of pokedex) { %>
              <div class="column is-one-quarter">
                  <div class="card is-flex">
                      <div class="card-image">
                          <figure class="image is-4by3">
                            <img src="<%= pokemon.spriteFront %>" alt="Placeholder image">
                          </figure>
                        </div>
                     
                      <div class="card-content is-flex">
                        <div class="media">
                          <div class="media-content">
                            <p class="title is-4"><%= pokemon.name %></p>
                            <p class="title is-4">#<%= pokemon.id %></p>
                            <p><a href="/pokemon/<%= pokemon.name %>" class="is-link is-primary">Learn More</a></p>
                          </div>
                        </div>
                      </div>
                    </div>

              </div>
                  <% } %>
                  </div>
                    <div class="field is-grouped ">
                        <% if (previous) { %>
                          <div class="control ">
                              <form method="POST" action="/" id="previous-form">
                                <input type="text" hidden value="<%= previous %></" name="previousPage">
                                <button type="button"class="button is-danger" id="previous-btn">Previous</button>
                              </form>
                          </div>
                          
                          <% }  %>
                        <% if (next) { %>
                          <div class="control">
                              <form method="POST" action="/" id="next-form">
                                <input type="text" hidden value="<%= next %></" name="nextPage">
                                <button class="button is-danger" type="button" id="next-btn">Next</button>
                              </form>
                          </div>                         
                          <% }  %>
                          </div>                
          <% } else { %>
              <h1>No Pokemon Found!</h1>
              <% } %>
    </section>

    <%- include('../includes/end.ejs') %>