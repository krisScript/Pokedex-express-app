<%- include('../includes/head.ejs') %>
    </head>
  
  <body>
      <%- include('../includes/navigation.ejs') %>
    <section class="section">
        <% if (palParkAreas.length > 0) { %>
          <div class="columns is-multiline">
              <% for (let palParkArea of palParkAreas) { %>
              <div class="column is-one-fifth">
                    <a href="/pal-park-area/<%= palParkArea.name %>" class="button"><%= palParkArea.name %></a>
              </div>
                  <% } %>
                  </div>
                    <div class="field is-grouped ">
                        <% if (previous) { %>
                          <div class="control ">
                              <form method="POST" action="/pal-park-areas" id="previous-form">
                                <input type="text" hidden value="<%= previous %></" name="previousPage">
                                <button type="button"class="button is-danger" id="previous-btn">Previous</button>
                              </form>
                          </div>
                          
                          <% }  %>
                        <% if (next) { %>
                          <div class="control">
                              <form method="POST" action="/pal-park-areas" id="next-form">
                                <input type="text" hidden value="<%= next %></" name="nextPage">
                                <button class="button is-danger" type="button" id="next-btn">Next</button>
                              </form>
                          </div>                         
                          <% }  %>
                          </div>                
          <% } else { %>
              <h1>No Pal Park Areas Found!</h1>
              <% } %>
    </section>

    <%- include('../includes/end.ejs') %>